@using Mamba_Core.Models
@model List<Employee>
@{
    int count = 0;
}
<h1>
    Employees
    <a class="btn btn-primary" asp-action="Create">Create</a>
</h1>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Fullname</th>
                <th scope="col">Position</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>
                    <td>@item.Fullname</td>
                    <td>@item.Position</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/upload/admin/@item.ImgUrl" />
                        </div>
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>